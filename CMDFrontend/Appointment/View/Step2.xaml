<Page x:Class="CMDFrontend.Appointment.View.Step2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CMDFrontend.Appointment.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Step2">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Choose reason/Type reason for Appointment"
                   FontSize="20"
                   HorizontalAlignment="Center"
                   Margin="0,35,0,0"
                   Foreground="Gray"
                   FontWeight="DemiBold"/>
            <Image Grid.Row="1" Source="C:\Users\shash\OneDrive\Desktop\CMD\WpfCMDApp\Image\AppointmentImage\Flow 1 and 1 more page - Personal - Microsoft​ Edge 25-10-2022 23_27_22.png"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
